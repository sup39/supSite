{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es2022"],
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es2022",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist"
  },
  "include": [
    "lib"
  ]
}
